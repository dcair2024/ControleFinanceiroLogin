@model ControleFinanceiroLogin.Models.Despesa

<h2>Nova Despesa</h2>

<form asp-action="Criar">
    <input asp-for="Descricao" placeholder="Descrição" required />
    <input asp-for="Valor" placeholder="Valor" type="number" step="0.01" required />
    <input asp-for="Data" type="date" required />
    <button type="submit">Salvar</button>
</form>
